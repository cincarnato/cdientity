    },
    "require-dev": {
        "zendframework/zendframework": "~2.2",
        "doctrine/doctrine-orm-module": ">=0.8"
    },
    
    "suggest" : {
        "doctrine/doctrine-orm-module": ">=0.8"
    },
    
    "autoload": {
        "psr-0": {
