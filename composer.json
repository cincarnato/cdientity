    "type":        "library",
    "license":     "WTFPL",
    "keywords": [
        "entity",
        "doctrine",
        "zf2",
        "module",
        "Zend Framework"
    ],
    
    "authors": [{
        "name": "Cristian Incarnato",
        "email": "cristian.cdi@gmail.com"
    }],
    
    "minimum-stability": "dev",
    
